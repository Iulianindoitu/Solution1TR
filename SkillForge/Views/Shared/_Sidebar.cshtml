@{
    var isAuthenticated = Request.IsAuthenticated;
}

<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
    <div class="app-brand demo">
        <a href="@Url.Action("Index", "Home")" class="app-brand-link">
            <span class="app-brand-logo demo">
                <img src="~/Content/assets/img/icons/Loogo.jpg" alt="Logo" width="25" height="25" />
            </span>
            <span class="app-brand-text demo menu-text fw-bold ms-2">SkillForge</span>
        </a>

        <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto">
            <i class="bx bx-chevron-left d-block d-xl-none align-middle"></i>
        </a>
    </div>

    <div class="menu-divider mt-0"></div>
    <div class="menu-inner-shadow"></div>

    <ul class="menu-inner py-1">
        <!-- Dashboards -->
        <li class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
            <a href="@Url.Action("Index", "Home")" class="menu-link">
                <i class="menu-icon tf-icons bx bx-home-smile"></i>
                <div class="text-truncate">Dashboard</div>
            </a>
        </li>

        <!-- Authentication -->
        <li class="menu-header small text-uppercase">
            <span class="menu-header-text">Authentication</span>
        </li>

        @if (!isAuthenticated)
        {
            <li class="menu-item">
                <a href="javascript:void(0);" class="menu-link menu-toggle">
                    <i class="menu-icon tf-icons bx bx-lock-open-alt"></i>
                    <div class="text-truncate">Authentications</div>
                </a>
                <ul class="menu-sub">
                    <li class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Login" ? "active" : "")">
                        <a href="@Url.Action("Login", "Login")" class="menu-link">
                            <div class="text-truncate">Login</div>
                        </a>
                    </li>
                    <li class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Auth" ? "active" : "")">
                        <a href="@Url.Action("Auth", "Login")" class="menu-link">
                            <div class="text-truncate">Register</div>
                        </a>
                    </li>
                    <li class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "ForgotPassword" ? "active" : "")">
                        <a href="@Url.Action("ForgotPassword", "Login")" class="menu-link">
                            <div class="text-truncate">Forgot Password</div>
                        </a>
                    </li>
                </ul>
            </li>
        }
        else
        {
            <li class="menu-item">
                <a href="@Url.Action("Logout", "Login")" class="menu-link">
                    <i class="menu-icon tf-icons bx bx-log-out"></i>
                    <div class="text-truncate">Logout</div>
                </a>
            </li>
        }

        <!-- Courses -->
        <li class="menu-header small text-uppercase">
            <span class="menu-header-text">Courses</span>
        </li>
        <li class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "NewCourses" ? "active" : "")">
            <a href="@Url.Action("NewCourses", "Home")" class="menu-link">
                <i class="menu-icon tf-icons bx bx-collection"></i>
                <div class="text-truncate">New Courses</div>
            </a>
        </li>

        <!-- Shopping Cart -->
        <li class="menu-header small text-uppercase">
            <span class="menu-header-text">Shopping Cart</span>
        </li>
        <li class="menu-item">
            <div class="px-3">
                @Html.Action("GetCart", "Cart")
            </div>
        </li>

        @if (isAuthenticated)
        {
            <!-- User Profile -->
            <li class="menu-header small text-uppercase">
                <span class="menu-header-text">Account</span>
            </li>
            <li class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Profile" ? "active" : "")">
                <a href="@Url.Action("Profile", "Home")" class="menu-link">
                    <i class="menu-icon tf-icons bx bx-user"></i>
                    <div class="text-truncate">Profile</div>
                </a>
            </li>
            <li class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Settings" ? "active" : "")">
                <a href="@Url.Action("Settings", "Home")" class="menu-link">
                    <i class="menu-icon tf-icons bx bx-cog"></i>
                    <div class="text-truncate">Settings</div>
                </a>
            </li>
        }
    </ul>
</aside> 